<h1>家事一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house_works.each do |house_work| %>
      <tr>
        <td><%= link_to house_work.name, house_work %></td>
        <td><%= link_to 'Edit', edit_house_work_path(house_work) %></td>
        <td><%= link_to 'Destroy', house_work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

